<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dorner.csgomapscallouts.activities.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp">

            <Button
                android:text="Mirage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/de_mirage"
                android:layout_weight="1" />

            <Button
                android:text="Dust 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/de_dust2"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp">

            <Button
                android:text="Italy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cs_italy"
                android:layout_weight="1" />

            <Button
                android:text="Cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/de_cache"
                android:layout_weight="1" />

            <Button
                android:text="Cobblestone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/de_cobblestone"
                android:layout_weight="1"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp">

            <Button
                android:text="Dust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/de_dust"
                android:layout_weight="1" />

            <Button
                android:text="Inferno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/de_inferno"
                android:layout_weight="1" />

            <Button
                android:text="Nuke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/de_nuke"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp">

            <Button
                android:text="Overpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/de_overpass"
                android:layout_weight="1"
                android:textSize="11sp" />

            <Button
                android:text="Season"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/de_season"
                android:layout_weight="1" />

            <Button
                android:text="Train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/de_train"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cs_go"
            android:id="@+id/imageView" />
    </LinearLayout>
</RelativeLayout>
